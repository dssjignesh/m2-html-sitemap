<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="dss_seo_core" translate="label" type="text" sortOrder="10" showInDefault="1"
            showInWebsite="1" showInStore="1">
            <label>SEO Core</label>
            <tab>dss</tab>
            <resource>Dss_SeoCore::config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1"
                showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable_h1_title" translate="label" type="select" sortOrder="10"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Custom H1 Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[Version 0.0.1<br/>This new heading 1 will replace the original h1 of category,
                        CMS page & product page]]>
                    </comment>
                </field>
                <field id="google_verification" translate="label" type="text" sortOrder="40"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Google  Site Verification Code</label>
                </field>
                <field id="bing_verification" translate="label" type="text" sortOrder="40" showInDefault="1">
                    <label>Bing Verification Code</label>
                </field>
            </group>
        </section>
    </system>
</config>
